@model IEnumerable<FinansSitesi.Models.RecurringTransaction>

@{
    ViewData["Title"] = "Tekrarlayan İşlemler";
}

<h2>Tekrarlayan İşlemler</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Hesap</th>
            <th>Açıklama</th>
            <th>Tutar</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Frekans</th>
            <th>Son Oluşturulan Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AccountId</td>
                <td>@item.Description</td>
                <td>@item.Amount.ToString("C")</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@(item.EndDate.HasValue ? item.EndDate.Value.ToShortDateString() : "-")</td>
                <td>@item.Frequency</td>
                <td>@(item.LastGeneratedDate.HasValue ? item.LastGeneratedDate.Value.ToShortDateString() : "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
