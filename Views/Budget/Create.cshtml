@model FinansSitesi.Models.Budget

@{
    ViewData["Title"] = "Bütçe Ekle";
}

<h2>Bütçe Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="@(ViewBag.Categories as List<SelectListItem>)" class="form-control">
            <option value="">Kategori Seçin</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Period"></label>
        <select asp-for="Period" asp-items="@(ViewBag.Periods as List<SelectListItem>)" class="form-control">
            <option value="">Dönem Seçin</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
</form>
