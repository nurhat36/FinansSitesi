@{
    ViewData["Title"] = "Hoş Geldiniz";
}

<!-- Hero Section -->
<div class="hero-section bg-gradient-primary text-white py-5">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold mb-4">Finansal Özgürlüğünüz İçin</h1>
                <p class="lead mb-4">Gelirlerinizi, giderlerinizi akıllıca yönetin, hedefler belirleyin ve finansal geleceğinizi şekillendirin.</p>
                <div class="d-flex gap-3">
                    <a href="/Identity/Account/Register" class="btn btn-light btn-lg px-4 py-2 rounded-pill fw-bold">Ücretsiz Kaydol</a>
                    <a href="#features" class="btn btn-outline-light btn-lg px-4 py-2 rounded-pill">Keşfet</a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <img src="https://cdn-icons-png.flaticon.com/512/3132/3132693.png" alt="Finans Yönetimi" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<!-- Features Carousel -->
<div id="features" class="container py-5 my-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary">Finans Takip Sistemi ile Neler Yapabilirsiniz?</h2>
        <p class="text-muted">İhtiyacınız olan tüm finansal araçlar tek bir platformda</p>
    </div>

    <div id="featuresCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#featuresCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#featuresCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#featuresCarousel" data-bs-slide-to="2"></button>
            <button type="button" data-bs-target="#featuresCarousel" data-bs-slide-to="3"></button>
        </div>
        <div class="carousel-inner rounded-4">
            <!-- Slide 1 -->
            <div class="carousel-item active">
                <div class="row g-4 p-4">
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-lg">
                            <div class="card-body p-4 text-center">
                                <div class="icon-wrapper bg-success bg-opacity-10 rounded-circle mx-auto mb-4" style="width: 80px; height: 80px;">
                                    <i class="fas fa-bullseye fa-3x text-success"></i>
                                </div>
                                <h4 class="fw-bold">Hedef Belirleme</h4>
                                <p class="text-muted">Ev, araba veya tatil hedeflerinizi belirleyin ve otomatik takip edin.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-lg">
                            <div class="card-body p-4 text-center">
                                <div class="icon-wrapper bg-info bg-opacity-10 rounded-circle mx-auto mb-4" style="width: 80px; height: 80px;">
                                    <i class="fas fa-wallet fa-3x text-info"></i>
                                </div>
                                <h4 class="fw-bold">Bütçe Yönetimi</h4>
                                <p class="text-muted">Aylık bütçeler oluşturun ve harcamalarınızı kategorilere göre takip edin.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-lg">
                            <div class="card-body p-4 text-center">
                                <div class="icon-wrapper bg-warning bg-opacity-10 rounded-circle mx-auto mb-4" style="width: 80px; height: 80px;">
                                    <i class="fas fa-chart-pie fa-3x text-warning"></i>
                                </div>
                                <h4 class="fw-bold">Detaylı Raporlar</h4>
                                <p class="text-muted">Gelir-gider dengenizi detaylı grafiklerle analiz edin.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
                <div class="row g-4 p-4">
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-lg">
                            <div class="card-body p-4 text-center">
                                <div class="icon-wrapper bg-danger bg-opacity-10 rounded-circle mx-auto mb-4" style="width: 80px; height: 80px;">
                                    <i class="fas fa-bell fa-3x text-danger"></i>
                                </div>
                                <h4 class="fw-bold">Hatırlatıcılar</h4>
                                <p class="text-muted">Fatura ödeme tarihleri ve önemli finansal işlemler için hatırlatıcılar kurun.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-lg">
                            <div class="card-body p-4 text-center">
                                <div class="icon-wrapper bg-primary bg-opacity-10 rounded-circle mx-auto mb-4" style="width: 80px; height: 80px;">
                                    <i class="fas fa-cloud-upload-alt fa-3x text-primary"></i>
                                </div>
                                <h4 class="fw-bold">Bulut Depolama</h4>
                                <p class="text-muted">Fatura ve finansal belgelerinizi güvenli bulut depolamada saklayın.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-lg">
                            <div class="card-body p-4 text-center">
                                <div class="icon-wrapper bg-purple bg-opacity-10 rounded-circle mx-auto mb-4" style="width: 80px; height: 80px;">
                                    <i class="fas fa-mobile-alt fa-3x text-purple"></i>
                                </div>
                                <h4 class="fw-bold">Mobil Uyumlu</h4>
                                <p class="text-muted">İstediğiniz cihazdan, istediğiniz zaman finansınızı yönetin.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#featuresCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bg-primary rounded-circle p-3"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#featuresCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon bg-primary rounded-circle p-3"></span>
        </button>
    </div>
</div>

<!-- Stats Section -->
<div class="bg-light py-5">
    <div class="container py-5">
        <div class="row g-4 text-center">
            <div class="col-md-3">
                <h2 class="display-4 fw-bold text-primary">10.000+</h2>
                <p class="text-muted">Mutlu Kullanıcı</p>
            </div>
            <div class="col-md-3">
                <h2 class="display-4 fw-bold text-success">₺50M+</h2>
                <p class="text-muted">Yönetilen Bütçe</p>
            </div>
            <div class="col-md-3">
                <h2 class="display-4 fw-bold text-info">1.200+</h2>
                <p class="text-muted">Tamamlanan Hedef</p>
            </div>
            <div class="col-md-3">
                <h2 class="display-4 fw-bold text-warning">7/24</h2>
                <p class="text-muted">Kesintisiz Destek</p>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="container my-5 py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h2 class="fw-bold mb-4">Finansal Kontrolü Elinize Alın</h2>
            <p class="lead text-muted mb-5">Ücretsiz kaydolun ve finansal geleceğinizi bugünden şekillendirmeye başlayın.</p>
            <a href="/Identity/Account/Register" class="btn btn-primary btn-lg px-5 py-3 rounded-pill fw-bold">Hemen Ücretsiz Başla</a>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .icon-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .carousel-control-prev, .carousel-control-next {
        width: auto;
    }

    .carousel-control-prev-icon, .carousel-control-next-icon {
        background-size: 1.5rem;
    }

    .bg-purple {
        background-color: #6f42c1;
    }

    .text-purple {
        color: #6f42c1;
    }

    .carousel-indicators button {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background-color: rgba(0,0,0,0.2);
    }

    .carousel-indicators .active {
        background-color: #0d6efd;
    }
</style>

<script>
    // Otomatik kaydırma hızını ayarla
    document.addEventListener('DOMContentLoaded', function () {
        var myCarousel = document.getElementById('featuresCarousel');
        var carousel = new bootstrap.Carousel(myCarousel, {
            interval: 5000,
            wrap: true
        });
    });
</script>